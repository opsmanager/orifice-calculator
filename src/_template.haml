%form
  %ul
    %li
      %label Pipe ID
      %select{ :id => 'pipeID', "data-bind" => "options: pipeID, value: selectedPipeID().value, optionsText: 'name', optionsValue: 'value'" }
    %li{ 'data-bind' => 'validationOptions: {insertMessages: false}' }
      %label Operating Pressure
      %input{ :id => 'operatingPressure', :type => 'text', "data-bind" => "value: operatingPressure" }
      %span{ "data-bind" => "visible: operatingPressure().length == 0 || isNaN(operatingPressure())" }
        %span{ "data-bind" => "validationMessage: operatingPressure" }
    %li
      %label Operating Pressure Read
      %div{ "data-bind" => "foreach: operatingPressureRead" }
        %div
          %input{ :class => 'operatingPressureRead', :type => 'radio', "data-bind" => "checkedValue: $data, checked: $component.chosenOperatingPressureRead"  }
          %label{ "data-bind" => "text: $data" }
    %li
      %label Operating Pressure Units
      %select{ :id => 'operatingPressureUnits', "data-bind" => "options: operatingPressureUnits, value: selectedOperatingPressureUnits" }
    %li
      %label Base Specific Gravity
      %input{ :id => 'baseSpecificGravity', :type => 'text', "data-bind" => "onlyFloat, value: baseSpecificGravity" }
    %li
      %label Operating Temperature
      %input{ :id => 'operatingTemperature', :type => 'text', "data-bind" => "onlyFloat, value: operatingTemperature" }
    %li
      %label Operating Temperature Units
      %div{ "data-bind" => "foreach: operatingTemperatureUnit" }
        %div
          %input{ :class => 'operatingTemperatureUnit', :type => 'radio', "data-bind" => "checkedValue: $data, checked: $component.selectedOperatingTemperatureUnit"  }
          %label{ "data-bind" => "text: $data" }
    %li
      %label Differential Pressure
      %input{ :id => 'differentialPressure', :type => 'text', "data-bind" => "onlyInteger, value: differentialPressure" }
    %li
      %label Orifice Bore Diameter
      %input{ :id => 'orificeBoreDiameter', :type => 'text', "data-bind" => "onlyFloat, value: orificeBoreDiameter" }
    %li
      %label Compressibility Correction
      %div{ "data-bind" => "foreach: compressibilityCorrection" }
        %div
          %input{ :class => 'compressibilityCorrection', :type => 'radio', "data-bind" => "checkedValue: $data, checked: $component.chosenCompressibilityCorrection"  }
          %label{ "data-bind" => "text: $data" }
      %input{ :id => 'compressibilityCorrectionValue', :type => 'text', "data-bind" => "visible: chosenCompressibilityCorrection() == 'Zf', value: compressibilityCorrectionValue" }
      %span{ 'data-bind' => 'visible: operatingPressure().length > 0 && !isNaN(operatingPressure())' }
        %span{ "data-bind" => "validationMessage: operatingPressure" }
    %li
      %label Flow Rate
      %br
      %span{ :id => 'flowRate', "data-bind" => "copyToClipboard, text: flowRate" }
      %span
        %select{ :id => 'flowRateUnit', 'data-bind' => 'options: flowRateUnit, value: selectedFlowRateUnit' }
